<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.recipetresure.PersonDetailActivity"
                android:background="#FFCCBC"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="RECIPE TRESURE"
        android:gravity="center"
        android:id="@+id/nameRecipe"
        android:textColor="#FFA726"
        android:textSize="40sp"
        android:fontFamily="@android:string/defaultMsisdnAlphaTag"
        android:textStyle="bold"
        android:shadowColor="#FFC107"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/name"
        android:layout_below="@id/nameRecipe"
        android:paddingTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:paddingLeft="30dp"
        android:hint="User Name"
        android:ems="10"
        android:id="@+id/emailId"
        android:layout_below="@+id/name"
        android:paddingTop="20dp">

    <requestFocus />
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/emailId"
        android:paddingTop="20dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/password"
        android:paddingTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="Sign Up"
        android:background="#FFA726"
        android:id="@+id/submit"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/cancel"
        android:background="#FFA726"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/submit"/>

</RelativeLayout>
