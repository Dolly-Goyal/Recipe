<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.recipetresure.SortByType">
        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar">
        </include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Recipe"
            android:id="@+id/typeRecipe"
            android:textSize="35dp"
            android:gravity="left"
            android:textColor="#D50000"
            android:layout_below="@+id/app_bar"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typerecipelist"
            android:layout_below="@+id/typeRecipe"/>

</RelativeLayout>
    <fragment
        android:layout_width="match_parent"
        android:name="com.recipetresure.navigationFragment"
        android:layout_height="match_parent"
        android:id="@+id/navigation_drawer_fragment"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation"
        tools:layout="@layout/fragment_navigation"></fragment>
</android.support.v4.widget.DrawerLayout>